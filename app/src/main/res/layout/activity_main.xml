<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webank.mbank.circleanimation.MainActivity">


    <com.webank.mbank.circle.CircleView
        android:id="@+id/circle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scale_radius_change_step="50"
        app:rotate_angle_step="6"
        app:scale_max="2"
        app:scale_radius_threshold="10"
        />

    <Button
        android:id="@+id/animation_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="停止动画" />

    <!--<Button-->
        <!--android:id="@+id/reset"-->
        <!--android:layout_toLeftOf="@+id/animation_stop"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
    <!--android:text="重置" />-->

    <Button
        android:id="@+id/animation_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/animation_stop"
        android:text="开始动画" />
</RelativeLayout>
